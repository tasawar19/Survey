@model IEnumerable<Survey.Models.Survey>

@{
    ViewBag.Title = "SurveyList";
}

<h2>Survey List</h2>


    @using (Html.BeginForm())
    {<div class="form-group">
        <div class="col-md-3">
            <input type="text" name="search" class="form-control" value="@ViewBag.search" required />
        </div>
         <div class="col-md-2">
             <input type="submit" value="Search"  class="btn btn-default"/>
        
         </div>
    </div>
    }
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SurveyTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeLimit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeLimit)
            </td>
            <td>
                @Html.ActionLink("Take Survey", "Create", "Visitors", new { surveyID = item.SurveyID }, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    }

</table>
