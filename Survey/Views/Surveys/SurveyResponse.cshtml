@model Survey.Models.Survey

@{
    ViewBag.Title = "SurveyResponse";
}
<style>
    .control-label {
        padding-top: 0 !important;
    }

    textarea {
        max-width: 600px;
    }
</style>

<h2>SurveyResponse</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.SurveyTitle</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2" for="Survey_Title">End Date</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.EndDate)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Survey_Title">Time Limit</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TimeLimit)
            </div>
        </div>
        @if (Model.SurveyID != 0)
        {
            <div class="form-group">
                @Html.Label("Questions", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <br />
            <hr>
            foreach (var item in Model.Questions.OrderBy(t => t.QuestionIndex))
            {<div class="form-group">
                    <div class="col-md-1">

                        @(item.QuestionIndex):
                    </div>
                    <div class="col-md-10">
                        @item.QuestionText
                    </div>
                </div>
                if (item.QuestionTypeID == 1)
                {
                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <textarea rows="4" cols="100"></textarea>
                        </div>
                    </div>
                }
                foreach (var option in item.QuestionOptions)
                {
                    if (item.QuestionTypeID == 2)
                    {
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <input type="radio" attr="@option.IsSurveyLogicText.ToString()" name="radio@(item.QuestionID)" /> @option.QuestionOptionText
                            </div>
                        </div>
                    }
                    else if (item.QuestionTypeID == 3)
                    {
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <input type="checkbox" attr="@option.IsSurveyLogicText.ToString()" name="checkbox@(item.QuestionID)"/> @option.QuestionOptionText
                            </div>
                        </div>
                    }
                    if (option.IsSurveyLogicText)
                    {<div class="form-group">
                            <div class="col-md-10">
                                Survey Logic: <input type="checkbox" disabled checked />
                                @option.SurveyLogicText
                            </div>
                        </div>
                    }
                }
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Add Question", "Create", "Questions", new { surveyID = Model.SurveyID, id = 0 }, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
